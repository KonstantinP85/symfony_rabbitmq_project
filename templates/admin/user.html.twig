{% extends 'admin/index.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <div class="row no-gutters">
            <div class="col-12">
                <h4 class="display-4 text-left">
                    <a class="btn btn-success" href="{{ path('admin_user_create') }}">Добавить нового пользователя</a><br>
                </h4>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row no-gutters justify-content-center">
            <div class="col-8">
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row no-gutters">
            <div class="col-8">
                <h2>Список пользователей</h2>
                <table class="table table-hover table-sm">
                    <thead class="thead-light">
                    <tr>
                        <th scope="col">Email</th>
                        <th scope="col">ФИО</th>
                        <th scope="col">Телефон</th>
                        <th scope="col">Пол</th>
                        <th scope="col">Редактировать</th>
                        <th scope="col">Статус</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.email }}</td>
                            <td>{{ user.lastName }} {{ user.firstName }} {% if user.patronymic is defined %}{{ user.patronymic }}{% endif %}</td>
                            <td>{{ user.phone }}</td>
                            <td>{{ user.gender }}</td>
                            <td>
                                <a href="#" class="btn btn-outline-success" type="submit">
                                    Редактировать
                                </a>
                            </td>
                            <td>
                                {% if user.isActive == true %}
                                    Активен
                                {% else %}
                                    Заблокирован
                                {% endif %}
                                <a href="{{ path('admin_user_change_status', {'id':user.id}) }}" class="btn btn-danger btn-sm" type="submit">
                                    Изменить статус
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}